{% extends "template.html.twig" %}

{% set style = '/projets/mamoun-veggie/asset/' %}

{% block stylesheets %}
	<link href="{{ style }}addrecipe.css" rel="stylesheet">
{% endblock %}


{% block content %}


	<section class="addrecipe">

		<div class="row-limit-size">

			<div class="container-recipe">

				<h2 class="title-add">Ajout de recette</h2>

				<form class="formImg" method="POST" action="{{ path('addImg') }}" enctype="multipart/form-data">
					{# <label for="image">Image :</label> #}
					<input type="file" id="image" name="image" accept="image/*" required>
					<button id="btn-sendImg" type="submit">Ajouter l'image</button>
				</form>

				<form action="{{ path('addedrecipe') }}" method="POST">

					<div class="title-recipe">
						<label for="title">Titre de la recette</label>
						<input type="text" id="title" name="title">
					</div>

					<div class="recipe-resume">
						<label for="description">Nombre de pers</label>
						<input type="number" id="nb-covers" name="numberOfCovers">

						<label for="time">Temps</label>
						<input type="time" id="cookingtime" name"cooking_Time">

					</div>

					<div class="recipe-ingredient">
						<label for="ingredient">Ingrédients</label>
						<textarea name="ingredient" id="ingredient"></textarea>
					</div>

					<div class="recipe-description">
						<label for="description">Préparation</label>
						<textarea name="description" id="description"></textarea>
					</div>


					<div class="recipe-author">
						<label for="author">Auteur</label>
						<input type="text" id="author" name="username">

						<label for="date">Publiée le
						</label>
						<input type="date" id="dateofp" name="publicationDate">
					</div>

					<div class="btn-send">

						<input class="pulse" type="submit" name="submit" value="Envoyer">
					</div>

				</form>


			</div>

		</div>
	</section>


{% endblock %}
